<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/e529ce63b0e351f18593267ba6901cf8"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="325dp"
        android:layout_height="450dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:backgroundTint="#BBDFC9B5"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/t1"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@id/t3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="By confirming your age, you are agreeing to the"
        android:layout_below="@id/submitBtn"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to A.M.A"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please tell us your age."
        android:textSize="28sp"
        android:textStyle="italic"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/t1"
        android:layout_centerHorizontal="true"
        android:textColor="#414141"/>

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="Enter your age"
        android:inputType="number"
        android:layout_below="@id/t2"/>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:text="CONFIRM"
        android:textColor="@color/black"
        android:backgroundTint="#D2B498"
        android:textSize="40sp"
        android:layout_below="@id/ageInput"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/t3"
        android:layout_marginTop="-10dp"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/TERMSSS"
        android:textColor="#001EFF"
        android:textSize="15.5sp"
        android:textStyle="italic" />
</RelativeLayout>