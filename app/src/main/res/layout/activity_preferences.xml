<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/e529ce63b0e351f18593267ba6901cf8"
    android:fitsSystemWindows="true">

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:drawableLeft="@drawable/x"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferences"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <TextView
        android:id="@+id/Interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Interval"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/t1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView2"
        android:layout_width="329dp"
        android:layout_height="180dp"
        android:layout_below="@id/Interval"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#BBDFC9B5"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Changes the interval at which reminders will be sent."
        android:textColor="@color/black"
        android:layout_below="@id/Interval"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="56dp"
        android:gravity="center"
        android:textSize="22sp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <Button
        android:id="@+id/c5"
        android:layout_width="300dp"
        android:layout_height="69dp"
        android:textSize="20sp"
        android:backgroundTint="#D2B498"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="Change Notification Interval"
        android:layout_below="@id/info"
        android:layout_marginTop="30dp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <View
        android:layout_width="325dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/info"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/c2"
        android:layout_width="350dp"
        android:layout_height="66dp"
        android:textSize="20sp"
        android:text="@string/confirm"
        android:textStyle="bold"
        android:backgroundTint="#D2B498"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/t1"
        android:layout_marginTop="600dp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

</RelativeLayout>
