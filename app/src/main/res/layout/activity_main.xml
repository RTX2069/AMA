<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/e529ce63b0e351f18593267ba6901cf8"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to A.M.A"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Anti Mobile Addiction App"
        android:textSize="23sp"
        android:textStyle="italic"
        android:layout_below="@id/t1"
        android:layout_centerHorizontal="true"
        android:textColor="#414141"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="325dp"
        android:layout_height="450dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:backgroundTint="#BBDFC9B5"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/t2"
        android:layout_marginTop="80dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/father"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/t2"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:text="PROCEED"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:backgroundTint="#ABABAB"
        android:textColor="#7E7E7E"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to the"
        android:layout_marginStart="62dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="15.5sp"
        android:buttonTint="#000000"
        app:buttonTint="@color/black"
        android:layout_marginTop="7dp"
        android:layout_below="@id/b1"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <Button
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_below="@id/b1"
        android:layout_marginTop="7dp"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/TERMSSS"
        android:textColor="#001EFF"
        android:textSize="15.5sp"
        android:textStyle="italic"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

</RelativeLayout>
